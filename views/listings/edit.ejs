<% layout("layout/boilerplate")-%>
<body>
    <div class="row">
        <div class="col-8 offset-2" >
            <br>
            <br>
    <h3 >Edit</h3>
        
    <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="md-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" name="listing[title]" value="<%= listing.title %>" class="form-control" required>
           <div class="invalid-feedback">
                Title should be Valid
              </div>
              <div class="valid-feedback">
                Looks Good!
              </div>
        </div>
        
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name = "listing[description]" class="form-control" required><%= listing.description %></textarea>
            <div class="invalid-feedback">
                Enter short description
              </div>
        </div>

        <div class="mb-3">
            Current Image<br>
            <img src="<%= URL %>"> 
        </div>
        <div class="md-3">
            <label for="image" class="form-label">Upload New Image</label>
            <input type="file" name="listing[image]"  class="form-control" value="<%= listing.image %>" >
        </div>
        <div class="row">

            <div class="md-3 col-md-4">
                <label for="price" class="form-label">Price</label>
                <input type="number" name="listing[price]" value="<%= listing.price %>"required class="form-control">
                <div class="invalid-feedback">
                    Price should be valid
                  </div>
            </div>
            <div class="md-3 col-md-8">
                <label for="location" class="form-label">Location</label>
                <input type="text" name="listing[location]" value="<%= listing.location %>" required  class="form-control">
                <div class="invalid-feedback">
                    Location should be valid
                  </div>
            </div>
        </div>
    
        
        <div class="md-3">
            <label for="country" class="form-label">Country</label>
            <input type="text" name="listing[country]" value="<%= listing.country %>" required class="form-control">
            <div class="invalid-feedback">
                Country should be valid
              </div>
        </div>
        
<br>

        <button class="btn btn-dark edit-btn">submit</button>
<br>
<br>
    </form>
    </div>
    </div>

</body>
