<% layout("layout/boilerplate")-%>

    <body>
        <div class="row">
            <div class="col-8 offset-2">
                <br>
                <br>

                <h4>Create New Listing</h4>



                <form method="POST" action="/listings" novalidate class="needs-validation"
                    enctype="multipart/form-data">
                    <div class="md-3">
                        <label for="title" class="form-label">Title</label>
                        <input type="text" name="listing[title]" placeholder="Add Title" class="form-control" required>
                        <div class="invalid-feedback">
                            Title should be Valid
                        </div>
                        <div class="valid-feedback">
                            Looks Good!
                        </div>
                    </div>

                    <div class="md-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea name="listing[description]" class="form-control" required></textarea>
                        <div class="invalid-feedback">
                            Enter short description
                        </div>
                    </div>

                    <!-- <div class="md-3">
            <label for="image" class="form-label">Image</label>
        <input type="text" name="listing[image]" placeholder="enter image url" class="form-control">

        </div> -->
                    <div class="md-3">
                        <label for="image" class="form-label">Upload Image</label>
                        <input type="file" name="listing[image]" class="form-control" required>
                    </div>
                    <div class="row">

                        <div class="md-3 col-md-4">
                            <label for="price" class="form-label">Price</label>
                            <input name="listing[price]" placeholder="1200" class="form-control" required>
                            <div class="invalid-feedback">
                                Price should be valid
                            </div>
                        </div>
                        <div class="md-3 col-md-8">
                            <label for="location" class="form-label">Location</label>
                            <input type="text" name="listing[location]" placeholder="jaypur,rajsathan"
                                class="form-control" required>
                            <div class="invalid-feedback">
                                Location should be valid
                            </div>
                        </div>
                    </div>


                    <div class="md-3">
                        <label for="country" class="form-label">Country</label>
                        <input type="text" name="listing[country]" placeholder="India" class="form-control" required>
                        <div class="invalid-feedback">
                            Country should be valid
                        </div>
                    </div>

                    <br>

                    <button class="btn btn-dark add-btn">submit</button>
                    <br>
                    <br>
                </form>
            </div>
        </div>
    </body>